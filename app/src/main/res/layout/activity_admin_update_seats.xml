<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#319CA8">

    <!-- Logo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/logo"
        android:contentDescription="Logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/schoolName"
        app:layout_constraintHorizontal_chainStyle="packed" />

    <!-- School Name -->
    <TextView
        android:id="@+id/schoolName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Little Heights Academy"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:fontFamily="cursive"
        app:layout_constraintTop_toTopOf="@id/logo"
        app:layout_constraintBottom_toBottomOf="@id/logo"
        app:layout_constraintStart_toEndOf="@id/logo"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"/>

    <!-- Rounded Container -->
    <LinearLayout
        android:id="@+id/container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/rounded_gray_bg"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Available Seats"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"/>

        <!-- Grade B -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Grade B:"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/edtCapacityB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Capacity"
                android:text="35"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:textColor="#000000"
                android:background="@drawable/white_button_bg"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/edtAvailableB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Available"
                android:text="10"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:textColor="#000000"
                android:background="@drawable/white_button_bg"
                android:layout_marginEnd="8dp"/>
        </LinearLayout>

        <!-- Grade A -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Grade A:"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/edtCapacityA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Capacity"
                android:text="35"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:textColor="#000000"
                android:background="@drawable/white_button_bg"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/edtAvailableA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Available"
                android:text="10"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:textColor="#000000"
                android:background="@drawable/white_button_bg"
                android:layout_marginEnd="8dp"/>
        </LinearLayout>

        <!-- Grade R -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Grade R:"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/edtCapacityR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Capacity"
                android:text="35"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:textColor="#000000"
                android:background="@drawable/white_button_bg"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/edtAvailableR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Available"
                android:text="10"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:textColor="#000000"
                android:background="@drawable/white_button_bg"
                android:layout_marginEnd="8dp"/>
        </LinearLayout>

        <!-- Seats Left -->
        <TextView
            android:id="@+id/txtSeatsLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seats left: 55"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"/>

        <!-- Update Button -->
        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:textColor="#FFFFFF"
            android:backgroundTint="#3C5BFB"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
