<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#319CA8"
    tools:context=".AdminUpdateSeatsActivity">

    <!-- Logo and Title -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/logo"
            android:contentDescription="Logo"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/schoolName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Little Heights Academy"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:fontFamily="cursive"/>
    </LinearLayout>

    <!-- Rounded Container -->
    <LinearLayout
        android:id="@+id/container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="24dp"
        android:padding="16dp"
        android:background="@drawable/rounded_gray_bg"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Seats"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"/>

        <!-- Grade A -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Grade A:"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/edtCapacityA"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:hint="Cap."
                android:inputType="number"
                android:backgroundTint="#000"
                android:textColor="#000"
                android:layout_marginEnd="6dp"/>

            <EditText
                android:id="@+id/edtAvailableA"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:hint="Avail."
                android:inputType="number"
                android:backgroundTint="#000"
                android:textColor="#000"/>
        </LinearLayout>

        <!-- Grade B -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Grade B:"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/edtCapacityB"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:hint="Cap."
                android:inputType="number"
                android:backgroundTint="#000"
                android:textColor="#000"
                android:layout_marginEnd="6dp"/>

            <EditText
                android:id="@+id/edtAvailableB"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:hint="Avail."
                android:inputType="number"
                android:backgroundTint="#000"
                android:textColor="#000"/>
        </LinearLayout>

        <!-- Grade R -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Grade R:"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/edtCapacityR"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:hint="Cap."
                android:inputType="number"
                android:backgroundTint="#000"
                android:textColor="#000"
                android:layout_marginEnd="6dp"/>

            <EditText
                android:id="@+id/edtAvailableR"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:hint="Avail."
                android:inputType="number"
                android:backgroundTint="#000"
                android:textColor="#000"/>
        </LinearLayout>

        <!-- Seats Left -->
        <TextView
            android:id="@+id/txtSeatsLeft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seats left: 0"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"
            android:textStyle="bold"/>

        <!-- Update Button -->
        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:textColor="#FFFFFF"
            android:backgroundTint="#3C5BFB"
            android:layout_gravity="center"/>
    </LinearLayout>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="3"
        android:padding="4dp"
        android:background="@drawable/rounded_nav_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/navUsers"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_admin"
                android:layout_gravity="center"
                app:tint="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Users"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_house"
                android:layout_gravity="center"
                app:tint="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navMenu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_menu"
                android:layout_gravity="center"
                app:tint="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menu"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
