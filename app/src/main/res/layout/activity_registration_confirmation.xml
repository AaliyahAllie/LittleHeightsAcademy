<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#319CA8"
    tools:context=".RegistrationConfirmationActivity">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="24dp"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/logo"
            android:contentDescription="School Logo"
            android:padding="8dp" />

        <TextView
            android:id="@+id/schoolName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:text="Little Heights Academy"
            android:textColor="@android:color/white"
            android:textSize="22sp" />
    </LinearLayout>

    <!-- Page Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registration Complete"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="26sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center" />

    <!-- Confirmation Message -->
    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thank you for registering your child at Little Heights Academy!"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_marginBottom="40dp"
        android:layout_gravity="center" />

    <!-- Track Status Button -->
    <Button
        android:id="@+id/btnTrackStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Track Registration Status"
        android:textAllCaps="false"
        android:backgroundTint="@android:color/white"
        android:textColor="#2196F3"
        android:layout_marginTop="20dp"
        android:padding="12dp"
        android:layout_gravity="center" />

</LinearLayout>
